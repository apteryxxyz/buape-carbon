---
path: tsconfig.json
---

{
	"include": ["src"{{#if (eq runtime "nextjs")}}, "next-env.d.ts", ".next/types/**/*.ts"{{/if}}],
	"exclude": ["node_modules"{{#if (eq runtime "nextjs")}}, ".next"{{else}}, "dist"{{/if}}],
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
		{{#if (eq runtime "nextjs")}}
		"lib": ["dom", "dom.iterable", "esnext"],
		{{else}}
		"lib": ["es2022"],
		{{/if}}
		"baseUrl": ".",
		"outDir": "dist",
		{{#if (eq runtime "nextjs")}}
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"plugins": [{ "name": "next" }],
		"jsx": "preserve",
		"incremental": true,
		{{/if}}
		"paths": { "~/*": ["src/*"] }
	}
}